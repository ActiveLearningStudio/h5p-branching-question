          "default": false
        },
        {
          "name": "feedback",
          "type": "group",
          "label": "Feedback",
          "fields": [
            {
              "name": "title",
              "type": "text",
              "label": "Feedback Text Title"
            },
            {
              "name": "subtitle",
              "type": "text",
              "label": "Feedback Text"
            },
            {
              "name": "image",
              "type": "image",
              "label": "Feedback image"
            }
          ],
          "widget": "showWhen",
          "showWhen": {
            "rules": [
